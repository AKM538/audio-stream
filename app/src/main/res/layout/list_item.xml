<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardBackgroundColor="#001829"
    card_view:cardElevation="5.5dp">

    <RelativeLayout
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingPrefix">

        <ImageView
            android:layout_marginStart="8dp"
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:src="@drawable/library_music"
            android:id="@+id/song_cover_image"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="8dp" />

        <TextView
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:id="@+id/song_name"
            fontPath="fonts/ProductSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/song_cover_image"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:text="Afreen Afreen" />

        <TextView
            android:paddingStart="4dp"
            android:paddingEnd="4dp"
            android:textSize="12sp"
            android:id="@+id/song_artists"
            fontPath="fonts/ProductSans-Regular.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/song_name"
            android:layout_toEndOf="@id/song_cover_image"
            android:textColor="@android:color/white"
            tools:text="Rahat Fateh Ali Khan, Momina Mustehsan" />

        <View
            android:layout_marginTop="10dp"
            android:layout_below="@id/song_artists"
            android:background="#757575"
            android:layout_width="match_parent"
            android:layout_height="0.1dp"/>

    </RelativeLayout>


</android.support.v7.widget.CardView>